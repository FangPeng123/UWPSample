<Page
    x:Class="EscalationSystem.Views.FTE_Consult_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EscalationSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:MyControl="using:EscalationSystem.Controls"
    xmlns:ViewModel="using:EscalationSystem.ViewModels"
    xmlns:controls="using:MyToolkit.Controls"
    xmlns:Model="using:EscalationSystem.Models"
    xmlns:Converter="using:EscalationSystem.Converter" 
    mc:Ignorable="d">

    <Page.Resources>
        <Converter:FTEURLConverter x:Key="URLConverter"></Converter:FTEURLConverter>
        <Converter:DataGridVisibleConverter x:Key="DataGridVisibleConverter"></Converter:DataGridVisibleConverter>
        <Converter:ProgreeRingActionConverter x:Key="ProgreeRingActionConverter"></Converter:ProgreeRingActionConverter>
        <Converter:ProgressRingActionOpacityConverter x:Key="ProgressRingActionOpacityConverter"></Converter:ProgressRingActionOpacityConverter>
    </Page.Resources>
    <Grid Name="RootGrid" Background="White" >
        <ProgressRing IsActive="{Binding IsLoading,Mode=TwoWay}" Name="MyProgressRing" Foreground="#FF2196F3" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center" ></ProgressRing>
        <ProgressRing  Name="AddProgressRing" Foreground="#FF2196F3" Width="250" Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" ></ProgressRing>
        <StackPanel  HorizontalAlignment="Left" Orientation="Vertical"  Name="RootPanel" Width="{Binding ScreenWidth}">
            <StackPanel.DataContext>
                <ViewModel:SceenSizeViewModel x:Name="SceenSizeViewModel"></ViewModel:SceenSizeViewModel>
            </StackPanel.DataContext>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" Grid.Row="0">
                    <StackPanel Width="{Binding ScreenWidth}" Height="50"  Background="#FF7CBDF1"  HorizontalAlignment="Left" VerticalAlignment="Top">
                        <TextBlock  Text="Consult Threads Records" FontWeight="Black" FontSize="30"  Foreground="White" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Opacity="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgressRingActionOpacityConverter}}"  Margin="5,0,0,0" Orientation="Vertical" HorizontalAlignment="Left">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" >
                            <TextBlock Height="5"></TextBlock>
                            <StackPanel Background="#FF2196F3" Orientation="Horizontal" Opacity="{Binding ElementName=AddProgressRing,Path=IsActive,Converter={StaticResource ProgressRingActionOpacityConverter}}">
                                <Image Name="ShowAddImage" Tapped="ShowAddImage_Tapped"  HorizontalAlignment="Left" Width="25" Height="20" Source="/Assets/triangle.png"/>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock Foreground="White" FontWeight="Bold" Text="Add Consult Thread"></TextBlock>
                            </StackPanel>
                            <StackPanel Visibility="Collapsed" Opacity="{Binding ElementName=AddProgressRing,Path=IsActive,Converter={StaticResource ProgressRingActionOpacityConverter}}" Background="#FF7CBDF1"  Name="AddRecordsPanle" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="80" Foreground="White" Text="Case Link"  VerticalAlignment="Center"></TextBlock>
                                    <TextBox Name="CaseLinkTxt" Width="600" ></TextBox>
                                </StackPanel>
                                <TextBlock Height="15"></TextBlock>
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <TextBlock Width="80" Foreground="White" Text="ThreadID" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Name="ThreadIDTxt" Width="350" ></TextBox>
                                    <TextBlock Width="20"></TextBlock>
                                    <TextBlock Width="80" Foreground="White" Text="VendorAlias" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Name="VendorAliasTxt" Width="150" ></TextBox>
                                </StackPanel>
                               
                                <TextBlock Height="15"></TextBlock>
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

                                    <TextBlock Width="80"  Text="Platform" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"></TextBlock>
                                    <ComboBox Name="AddPanelPlatformCombox" PlaceholderText="Please Choose Plaform" SelectionChanged="AddPanelPlatformCombox_SelectionChanged" IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" ItemsSource="{Binding MyProductList}"  Foreground="White">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Platform}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                              
                                <TextBlock Width="30"></TextBlock>
                                 <StackPanel Orientation="Horizontal"  Name="ForumStackPanel" Visibility="Collapsed">
                                <TextBlock Text="Forum" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"></TextBlock>
                                <ComboBox Name="AddPanelForumCombox" ItemsSource="{Binding}" PlaceholderText="Please Choose Forum" IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}"  Foreground="White">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <Image Source="/Assets/add.png" Name="AddConsultThread" Tapped="AddConsultThread_Tapped" HorizontalAlignment="Left" Width="35" Height="35"></Image>
                            </StackPanel>

                            

                            <TextBlock Height="5"></TextBlock>
                            <StackPanel Orientation="Horizontal" Background="#FF2196F3">
                                <Grid Margin="0,0,0,0" Width="{Binding ScreenWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                  
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Opacity="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgressRingActionOpacityConverter}}" Name="ShowQueryImage" Tapped="ShowQueryImage_Tapped" HorizontalAlignment="Left" Width="50" Height="30" Source="/Assets/searchshow.png"/>

                                    <StackPanel  Grid.Column="1"  Orientation="Horizontal">
                                        <TextBlock  Foreground="White" Text="Start Date"  VerticalAlignment="Center"></TextBlock>
                                        <DatePicker IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" Foreground="White" Name="StartDatePicker"  VerticalAlignment="Center"></DatePicker>
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Right" Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock  Foreground="White" Text="End Date" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                                        <DatePicker IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}"  Foreground="White" Name="EndDatePicker"  HorizontalAlignment="Right" VerticalAlignment="Center"></DatePicker>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" Grid.Column="3" Orientation="Horizontal">
                                        <TextBlock Text="FTE" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White"></TextBlock>
                                        <ComboBox IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" ItemsSource="{Binding}"  HorizontalAlignment="Right" Name="FTEComboBox"   Foreground="White">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" Grid.Column="4" Orientation="Horizontal">
                                        <TextBlock Text="Platform" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White"></TextBlock>
                                        <ComboBox IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" ItemsSource="{Binding MyProductList}" SelectedItem="{Binding SelectedItem}" HorizontalAlignment="Right" Name="PlatformComboBox"   Foreground="White">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Platform}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                
                                    <StackPanel HorizontalAlignment="Right" Grid.Column="5" Orientation="Horizontal">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center" Text="Items" Foreground="White"></TextBlock>
                                        <ComboBox IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" Name="PageComboBox" HorizontalAlignment="Right" Foreground="White">
                                            <ComboBoxItem Content="10"></ComboBoxItem>
                                            <ComboBoxItem Content="20"></ComboBoxItem>
                                            <ComboBoxItem Content="50"></ComboBoxItem>
                                            <ComboBoxItem Content="100"></ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <Button IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" Name="QueryButton" Click="QueryButton_Click" BorderBrush="#FF145A92" BorderThickness="2" Width="70"  Grid.Column="6" HorizontalAlignment="Right"   Foreground="White" Content="Query" Background="#FF2196F3" ></Button>
                                </Grid>
                            </StackPanel>
                            <StackPanel Visibility="Collapsed" Name="ShowSearchPanel" Opacity="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgressRingActionOpacityConverter}}" Background="#FF2196F3" Orientation="Horizontal" Height="35">
                                <TextBox Name="Searchtxt" Background="#FF2196F3" BorderThickness="0,0,0,3" BorderBrush="Aqua" Width="360" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" PlaceholderText="Search by ThreadID/ThreadTitle/Alias"></TextBox>
                                <Image Name="Search" Tapped="Search_Tapped" Width="38" Height="30" Source="/Assets/search.png"></Image>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <ScrollViewer Name="MyScrollView" VerticalScrollBarVisibility="Visible" VerticalScrollMode="Enabled">
                        <StackPanel Grid.Row="1">
                            <Border Background="Azure" BorderThickness="3,3,3,3" BorderBrush="White">
                                <controls:DataGrid IsEnabled="{Binding ElementName=MyProgressRing,Path=IsActive,Converter={StaticResource ProgreeRingActionConverter}}" Visibility="{Binding ElementName=EscalationPopup,Path=IsOpen,Converter={StaticResource DataGridVisibleConverter}}" RowBackgroundEvenBrush="Azure" RowBackgroundOddBrush="#FFD1E5F5" HeaderBackground="#FF7CBDF1" x:Name="DataGrid" DefaultOrderIndex="0">
                                    <controls:DataGrid.Columns>
                                        <controls:DataGridTemplatedColumn CanSort="False" Width="1.1*">
                                            <controls:DataGridTemplatedColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image  VerticalAlignment="Center"            
                   Width="22" Height="22" Source="/Assets/Lock.png"></Image>
                                                        <TextBlock Width="10"></TextBlock>
                                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Text="{Binding FteAlias}"                 
                  d:DataContext="{d:DesignInstance Type=Model:ConsultThread}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </controls:DataGridTemplatedColumn.CellTemplate>
                                            <controls:DataGridTemplatedColumn.Header>
                                                <TextBlock FontSize="15" FontWeight="Bold" Text="FTEOnwer"></TextBlock>
                                            </controls:DataGridTemplatedColumn.Header>
                                        </controls:DataGridTemplatedColumn>
                                        <controls:DataGridTemplatedColumn CanSort="False" Width="1.1*">
                                            <controls:DataGridTemplatedColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Text="{Binding VendorAlias}"                 
                  d:DataContext="{d:DesignInstance Type=Model:ConsultThread}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </controls:DataGridTemplatedColumn.CellTemplate>
                                            <controls:DataGridTemplatedColumn.Header>
                                                <TextBlock FontSize="15" FontWeight="Bold" Text="VendorOwner"></TextBlock>
                                            </controls:DataGridTemplatedColumn.Header>
                                        </controls:DataGridTemplatedColumn>
                                        <controls:DataGridTextColumn FontSize="15" Width="4.5*" CanSort="False"
                  Binding="{Binding ThreadId}" d:DataContext="{d:DesignInstance Type=Model:ConsultThread}">
                                            <controls:DataGridTextColumn.Header>
                                                <TextBlock  HorizontalAlignment="Right" FontSize="15" FontWeight="Bold" Text="ThreadID"></TextBlock>
                                            </controls:DataGridTextColumn.Header>
                                        </controls:DataGridTextColumn>
                                        <controls:DataGridTemplatedColumn CanSort="False" Width="4*">
                                            <controls:DataGridTemplatedColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton Foreground="#FF0563C1" FontSize="15" NavigateUri="{Binding Url,Converter={StaticResource URLConverter}}" Content="{Binding Url}" 
                                                         d:DataContext="{d:DesignInstance Type=Model:ConsultThread}"></HyperlinkButton>
                                                </DataTemplate>
                                            </controls:DataGridTemplatedColumn.CellTemplate>
                                            <controls:DataGridTemplatedColumn.Header>
                                                <TextBlock Text="ThreadURL" FontSize="15" FontWeight="Bold"></TextBlock>
                                            </controls:DataGridTemplatedColumn.Header>
                                        </controls:DataGridTemplatedColumn>
                                        <controls:DataGridTextColumn FontSize="15" Width="1.7*" IsAscendingDefault="False" Binding="{Binding ThreadCreatedDatetime}" 
                d:DataContext="{d:DesignInstance Type=Model:ConsultThread}">
                                            <controls:DataGridTextColumn.Header>
                                                <TextBlock FontSize="15" FontWeight="Bold" Text="ConsultDate"></TextBlock>
                                            </controls:DataGridTextColumn.Header>
                                        </controls:DataGridTextColumn>


                                        <controls:DataGridTemplatedColumn Width="1.3*" CanSort="False">
                                            <controls:DataGridTemplatedColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel VerticalAlignment="Center" Background="#FF2196F3">
                                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" FontSize="15" Text="{Binding Platform}" 
                d:DataContext="{d:DesignInstance Type=Model:ConsultThread}"></TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </controls:DataGridTemplatedColumn.CellTemplate>
                                            <controls:DataGridTemplatedColumn.Header>
                                                <TextBlock FontWeight="Bold" FontSize="15"  Text="Platform" Foreground="Black" />
                                            </controls:DataGridTemplatedColumn.Header>
                                        </controls:DataGridTemplatedColumn>
                                     
                                    </controls:DataGrid.Columns>
                                   
                                    <controls:DataGrid.RowStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Margin" Value="0"></Setter>
                                        </Style>
                                    </controls:DataGrid.RowStyle>
                                </controls:DataGrid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal" Width="{Binding ScreenWidth}" HorizontalAlignment="Center" Height="80">
                        <StackPanel Height="80" VerticalAlignment="Center" Grid.Column="1"  Orientation="Horizontal"  HorizontalAlignment="Right">
                            <Image Width="25" Height="25" Margin="0,-6,0,0"  Source="/Assets/NavF.PNG" NineGrid="0,3,0,0"  Name="FirstImage" Tapped="FirstImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-6,0,0"  Source="/Assets/Nav.PNG" Name="PreviousImage" NineGrid="0,10,0,0" Tapped="PreviousImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-6,0,0"  Source="/Assets/NavF.PNG" NineGrid="0,3,0,0"  Name="FirstSearchImage" Visibility="Collapsed" Tapped="FirstSearchImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-6,0,0"  Source="/Assets/Nav.PNG" NineGrid="0,10,0,0"  Name="PreviousSearchImage" Visibility="Collapsed" Tapped="PreviousSearchImage_Tapped"></Image>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontWeight="Bold" Foreground="#FF2196F3" Text="0" VerticalAlignment="Center" Height="25" Name="PageTxt"></TextBlock>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock Height="25" VerticalAlignment="Center" Text="to"  ></TextBlock>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock FontWeight="Bold"  Height="25" VerticalAlignment="Center" Foreground="#FF2196F3" Name="AllPageIndex" Text="0"></TextBlock>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock Height="25" VerticalAlignment="Center" Text="of"></TextBlock>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock FontWeight="Bold"  Height="25" Foreground="#FF2196F3" Text="0" Name="AllRecords" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Width="5"></TextBlock>
                                <TextBlock Height="25" Text="records" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>

                            <Image Width="25" Height="25" Margin="0,-3,0,0"  Source="/Assets/Nav2.PNG" Name="NextImage" NineGrid="0,8,0,0" Tapped="NextImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-3,0,0"  Source="/Assets/NavL.PNG" Name="LastImage" NineGrid="0,10,0,0" Tapped="LastImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-3,0,0"  Source="/Assets/Nav2.PNG" NineGrid="0,8,0,0" Visibility="Collapsed" Name="NextSearchImage" Tapped="NextSearchImage_Tapped"></Image>
                            <Image Width="25" Height="25" Margin="0,-3,0,0"  Source="/Assets/NavL.PNG" NineGrid="0,10,0,0" Visibility="Collapsed" Name="LastSearchImage" Tapped="LastSearchImage_Tapped"></Image>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>